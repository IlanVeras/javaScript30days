<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Redirection</title>
</head>
<body>
    <header>
        <img src="" alt="'capitolIcon">
        <h1>Panem Today, Panem Tomorrow, Panem Forever</h1>
        <img src="" alt="capitolIcon">
    </header>
    <form action="/" method="POST">
        <input  name="nameTribute" placeholder="Name" value="<%= body.nameTribute %>">
        <input min="12" type="number"  name="age" placeholder="Age" value="<%= body.age %>">
        <h3>District</h3>
        <select name="district">
            <option type="number" value="1">1</option>
            <option type="number" value="2">2</option>
            <option type="number" value="3">3</option>
            <option type="number" value="4">4</option>
            <option type="number" value="5">5</option>
            <option type="number" value="6">6</option>
            <option type="number" value="7">7</option>
            <option type="number" value="8">8</option>
            <option type="number" value="9">9</option>
            <option type="number" value="10">10</option>
            <option type="number" value="11">11</option>
            <option type="number" value="12">12</option>
        </select>
        <h3>Sex</h3>
        <input type="radio" name="sex" id="male" value="male">
        <label for="male">Male</label>
        <input type="radio" name="sex" id="female" value="female">
        <label for="female">Female</label> <br><br>
        <input  name="skills" placeholder="Skills" value="<%= body.skills %>">
        <input type="number" min="1" max="76" name="edition" placeholder="edition" value="<%= body.edition %>">
        <h3>Condition</h3>
        <input type="radio" name="condition" value="reaped" checked>
        <label for="reaped">Reaped</label>
        <input type="radio" name="condition" value="volunteer">
        <label for="volunteer">Volunteer</label>
        <h3>Winner</h3>
        <input type="radio" name="winner" value="false">
        <label for="false">No</label>
        <input type="radio" name="winner" value="true">
        <label for="true">Yes</label>
        <h3>Status</h3>
        <input type="radio" name="status" value="alive">
        <label for="alive">Alive</label>
        <input type="radio" name="status" value="deceased">
        <label for="alive">Deceased</label>
        <input type="radio" name="status" value="unknown">
        <label for="alive">Unknown</label>
        <input  name="imageUrl" placeholder="Image Link" value="<%= body.imageUrl %>">
        <h3>Wanted</h3>
        <input type="radio" name="wanted" value="false">
        <label for="false">No</label>
        <input type="radio" name="wanted" value="true">
        <label for="true">Yes</label>
        <button>Save</button>
    </form>

    <%if(error){%>
        <h3><%=error.message%></h3>
    <%}%>
    <!--
        const tributeSchema = new mongoose.Schema({
            nameTribute: {type: String, required: true},
            age: {type: Number, required: true},
            district: {type: Number, required: true},
            skills: String,
            sex: {type: String, required: true},
            edition: {type: String, required: true},
            condition: {type: String, required: true},
            clicks: {type: Number, default:0}
        })
    -->
    <footer>
        President Curiolanus Snow
        Minister of Technology Ilan Veras
    </footer>
</body>
</html>

